<h1><%= t('products') %></h1>
<%if @products.present?%>
  <div class="container">
    <div class="row hidden-md-up">
      <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card m-3 rounded-2 card-width">
            <%= image_view(product, ApplicationHelper::SHOW_IMAGE_SIZE) %>
            <hr class="m-0">
            <h5 class="card-title mx-3 mt-3"><%= product.name %></h5>
            <div class="card-body d-flex flex-column justify-content-between">
              <p class="card-text"><%= product.serial_no %></p>
            </div>
            <div class="d-flex flex-row m-2 p-2">
              <%= link_to t('show-button'), product, class:"btn btn-outline-primary m-1" %>
              <%= link_to t('edit-button'), edit_product_path(product), class: "btn btn-outline-warning m-1" %>
              <%= link_to t('delete-button'), product, method: :delete, data: { confirm: t('confirmation_msg') }, class: "btn btn-outline-danger m-1" %>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
  </div>
<% end %>
<br>
<%= link_to t('add',param: 'Product'), new_product_path, class: "btn btn-dark btn-lg" %>