<h1><%= t('list',param: 'Products') %></h1>
<% if @products.present? %>
  <div class="d-flex flex-row">
    <% @products.each do |product| %>
      <div class="container d-flex flex-column">
        <div class="card m-3 rounded-2 card-width">
          <%= image_view(product, ApplicationHelper::SHOW_IMAGE_SIZE) %>
          <hr class="m-0">
          <h5 class="card-title mx-3 mt-3"><%= product.name %></h5>
          <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text"><%= product.serial_no %></p>
            <p class="card-text"><%= product.quantity %></p>
            <p class="card-text"><%= "#{t('sold')} : #{product.sold_quantity}" %></p>
            <div>
              <%= link_to t('show-button'), product, class: "btn btn-outline-primary" %>
              <%= link_to t('edit-button'), edit_product_path(product), class: "btn btn-outline-warning" %>
              <%= link_to t('delete-button'), product, method: :delete, data: { confirm: t('confirmation_msg') }, class: "btn btn-outline-danger" %>
            </div>
          </div>
        </div>
        <div>
          <% if check_order_array(product) %>
            <div class="bg-success text-center card-width m-3">
              <p class="text-white"><%= t('ordered') %></p>
            </div>
          <% else %>
          <div class="d-flex flex-row ml-5">
            <%= render 'orders/form', item: product, request: 'create' %>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<br>
<%= link_to t('list',param: 'Order'), orders_path(status: "order-list"), class: "btn btn-dark btn-lg" %>
