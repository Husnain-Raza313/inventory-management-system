 <div class="form-body">
    <div class="row">
      <div class="form-holder">
        <div class="form-content">
          <div class="form-items">
            <h3><%= t('add', param: 'Category') %></h3>
            <%= form_with(model: category) do |form| %>
              <%= render "layouts/error_messages", messages: category.errors.full_messages %>
               <div class="col-md-12">
                 <%= form.text_field :name, class:"form-control" %>
               </div>
              <div class="col-md-12">
                <%= form.text_field :description, class:"form-control"%>
              </div>
              <div class="col-md-12">
                <%= form.file_field :image,class:"image-field"%>
              </div>
              <div class="form-button mt-3 col-md-4">
                <%= form.submit class: "btn btn-primary submit-button" %>
              </div>
            <%end%>
         </div>
       </div>
     </div>
   </div>
</div>