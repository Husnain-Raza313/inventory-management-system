<div class="form-body">
  <div class="row">
    <div class="form-holder">
      <div class="form-content">
        <div class="form-items">
          <%= form_with(model: category, validate: true) do |form| %>
            <div class="col-md-12">
              <%= form.text_field :name, class: "form-control", placeholder: true %>
            </div>
            <div class="col-md-12">
              <%= form.text_field :description, class: "form-control",  placeholder: true %>
            </div>
            <div class="col-md-12 mt-2">
              <div class="w-25">
                <%= image_view(category) %>
              </div>
              <%= form.file_field :image, class: "d-block image-file", id: 'image-file', validate: check_validation(@supplier) %>
            </div>
            <div class="form-button mt-3 col-md-4">
              <%= form.submit class: "btn btn-primary submit-button" %>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
