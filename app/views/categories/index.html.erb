<h1>Categories</h1>
<% if @categories.present? %>
  <div class="container d-flex flex-row">
    <% @categories.each do |category| %>
    <div class="card m-3 rounded-2 card-width">
      <%= image_view(category) %>
      <hr class="m-0">
      <h5 class="card-title mx-3 mt-3"><%= category.name %></h5>
      <div class="card-body d-flex flex-column justify-content-between">
        <p class="card-text"><%= category.description %></p>
        <div>
          <%= link_to t('show-button'), category, class:"btn btn-outline-primary" %>
          <%= link_to t('edit-button'), edit_category_path(category), class:"btn btn-outline-warning" %>
          <%= link_to t('delete-button'), category, method: :delete, data: { confirm: t('confirmation_msg') }, class:"btn btn-outline-danger" %>
        </div>
      </div>
    </div>
   <% end %> 
  </div>
<br>
<% end %>
<%= link_to t('add',param:'Category'), new_category_path, class:"btn btn-dark btn-lg" %>
