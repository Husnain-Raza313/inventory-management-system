<h1> <%= t('categories') %></h1>
<% if @categories.present? %>
  <div class="container">
    <div class="row hidden-md-up">
      <% @categories.each do |category| %>
        <div class="col-md-4">
          <div class="card m-3 rounded-2 card-width">
            <%= image_view(category, ApplicationHelper::SHOW_IMAGE_SIZE) %>
            <hr class="m-0">
            <h5 class="card-title mx-3 mt-3"><%= category.name %></h5>
            <div class="card-body d-flex flex-column justify-content-between">
              <p class="card-text"><%= category.description %></p>
            </div>
            <div class="d-flex flex-row m-2 p-2">
              <%= link_to t('show-button'), category, class: "btn btn-outline-primary m-1" %>
              <%= link_to t('edit-button'), edit_category_path(category), class: "btn btn-outline-warning m-1" %>
              <%= link_to t('delete-button'), category, method: :delete, data: { confirm: t('confirmation_msg') }, class: "btn btn-outline-danger m-1" %>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
  </div>
<% end %>
<%= render "shared/pagination", object: @categories %>
<br>
<%= link_to t('add',param: 'Category'), new_category_path, class: "btn btn-dark btn-lg" %>
