<div class="jumbotron p-5 border rounded-2 ml-5 showproductdiv">
  <div class="container d-flex flex-row justify-content-between">
    <div class="rounded overflow-hidden show-image-width m-auto">
      <%= image_view(@brand, ApplicationHelper::SHOW_IMAGE_SIZE) %>
    </div>
    <div class="m-5 d-flex flex-column">
      <h1 class="text-black"><b><%= t('name') %> <%= @brand.name %></b></h1>
      <p class="text-grey"><%= t('description') %>: <%= @brand.description %></p>
    </div>
  </div>
</div>
<div class="m-5">
  <%= link_to t('list',param: "Brands"), brands_path, class: "btn btn-dark btn-lg" %>
  <%= link_to t('edit-button'), edit_brand_path(@brand), class: "btn btn-primary btn-lg ml-2" %>
</div>
