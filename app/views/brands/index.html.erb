<h1><%= t('all', title: 'Brands') %></h1>
<div class="container d-flex flex-row">
  <% if @brands.present? %>
    <% @brands.each do |brand| %>
      <div class="card m-3 rounded-2 card-width">
        <%= image_view(brand) %>
        <hr class="m-0">
        <h5 class="card-title mx-3 mt-3"><%= brand.name %></h5>
        <div class="card-body d-flex flex-column justify-content-between">
          <p class="card-text"><%= brand.description %></p>
          <div>
            <%= link_to t('show'), brand, class:"btn btn-outline-primary" %>
            <%= link_to t('edit'), edit_brand_path(brand), class:"btn btn-outline-warning" %>
            <%= link_to t('delete'), brand, method: :delete, data: { confirm: t('confirmation_msg') }, class:"btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<br>
<%= link_to t('add', title: 'Brand'), new_brand_path, class:"btn btn-dark btn-lg" %>
