<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
        <div class="card" style="width: 18rem;">
             <%= image_tag "adidas.jpeg", class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= brand.name %></h5>
              <p class="card-text"><%= brand.description %></p>
              <%= link_to 'Show', brand, class:"btn btn-primary" %>
              <%= link_to 'Edit', edit_brand_path(brand), class:"btn btn-warning" %>
              <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
            </div>
        </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>
