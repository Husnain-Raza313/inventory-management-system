<h1>Brands</h1>
  <div class="container d-flex flex-row">
    <% if @brands.present? %>
      <% @brands.each do |brand| %>
          <div class="card m-3 rounded-2 card-width">
              <%= image_view(brand) %>
              <hr class="m-0">
              <h5 class="card-title mx-3 mt-3"><%= brand.name %></h5>
              <div class="card-body d-flex flex-column justify-content-between">
                  <p class="card-text"><%= brand.description %></p>
                  <div>
                    <%= link_to 'Show', brand, class:"btn btn-outline-primary" %>
                    <%= link_to 'Edit', edit_brand_path(brand), class:"btn btn-outline-warning" %>
                    <%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
                  </div>
                </div>
          </div>
      <% end %>
    <% end %>
  </div>

<br>

<%= link_to 'Add New Brand', new_brand_path, class:"btn btn-dark btn-lg" %>
