<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to 'Show', supplier, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier), class:"btn btn-outline-warning" %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Supplier', new_supplier_path, class:"btn btn-dark btn-lg" %>
