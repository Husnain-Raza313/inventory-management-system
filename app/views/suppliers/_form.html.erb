<%= form_with(model: @supplier, validate: true) do |form| %>
   <%# <%= render 'layouts/error_messages'%>
    <div class="form-group mb-2">
      <%= form.label :name, class:"d-block" %>
      <%= form.text_field :name, class:"form-control w-50" %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :supplier_address, class:"d-block" %>
      <%= form.text_field :supplier_address, class:"form-control w-75" %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :phone_no, class:"d-block" %>
      <%= form.text_field :phone_no, class:"form-control w-50" %>
    </div>
    <div class="actions">
        <%= form.submit class:"btn btn-success mb-5" %>
    </div>
<% end %>
